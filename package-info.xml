<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">

	<id>Neo_TE:Simple_Off_Topic_BBC</id>
	<name>Simple Off-Topic BBC</name>
	<type>modification</type>
	<version>1.0</version>

	<install for="2.0 - 2.0.99">
		<readme parsebbc="true">readme.txt</readme>
		<modification type="file">modifications.xml</modification>
		<modification type="file">languages.xml</modification>
		<modification type="file">languages-utf8.xml</modification>
		<require-file name="off_topic.gif" destination="$imagesdir/bbc" />
	</install>

	<uninstall for="2.0 - 2.0.99">
		<modification type="file" reverse="true">modifications.xml</modification>
		<modification type="file" reverse="true">languages.xml</modification>
		<modification type="file" reverse="true">languages-utf8.xml</modification>
		<remove-file name="$imagesdir/bbc/off_topic.gif" />
	</uninstall>

</package-info>
